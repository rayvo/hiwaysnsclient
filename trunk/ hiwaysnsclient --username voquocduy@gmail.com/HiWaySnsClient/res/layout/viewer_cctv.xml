<!--	(끝)하단 공용 메뉴 바	-->

<LinearLayout android:id="@+id/LinearLayout01"
			android:layout_alignParentBottom="true"
			android:layout_height="wrap_content" android:layout_width="fill_parent">

	<FrameLayout android:id="@+id/FrameLayout01" android:layout_width="fill_parent" android:layout_height="@dimen/footer_bar_height" android:background="@drawable/footer_bkgnd">
	
		<RelativeLayout android:id="@+id/RelativeLayout02" android:layout_centerVertical="true" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_gravity="center_vertical">	

		<LinearLayout android:id="@+id/LinearLayout01"
					android:layout_centerVertical="true"
					android:layout_height="wrap_content" android:layout_width="fill_parent">
		
		<Gallery
				android:id="@+id/gallery"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:gravity="center_horizontal|center_vertical"
				android:spacing="66dip"
				android:scrollbars="horizontal"
				android:scrollbarFadeDuration="0"
				android:scrollX="66dip"
				/>
		
		</LinearLayout>

		</RelativeLayout>
	
	</FrameLayout>

</LinearLayout>


</RelativeLayout>
	