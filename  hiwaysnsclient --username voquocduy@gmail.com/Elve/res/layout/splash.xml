<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/LinearLayout01"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:gravity="center"
	android:background="@drawable/splash">
	<LinearLayout android:orientation="vertical" android:id="@+id/mainView"
		android:layout_width="fill_parent" android:layout_height="wrap_content" >
		
		<TextView android:id="@+id/TextView01" android:layout_width="fill_parent"
			android:layout_marginTop="320px" android:layout_height="160px" android:textSize="30px"
			android:textStyle="bold" android:textColor="#CCFFFF" 
			android:layout_gravity="center_horizontal|center"
			android:text=""></TextView>

		<ProgressBar android:layout_width="fill_parent"
			android:layout_height="wrap_content" style="?android:attr/progressBarStyleHorizontal"
			android:id="@+id/progressbar_Horizontal" android:max="100" />
		<TextView android:id="@+id/TextView01" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textSize="16sp"
			android:textStyle="bold" android:textColor="#fff" android:text="Loading..."></TextView>
	</LinearLayout>
</LinearLayout>