<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/RelativeLayout01" 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent">


<!--상단 영역			-->
<FrameLayout android:id="@+id/FrameLayout02" android:background="@drawable/main_bkgnd" android:layout_height="fill_parent" android:layout_width="fill_parent">

<LinearLayout android:id="@+id/LinearLayout02" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">

	<!--상단 타이틀 바		-->
	<FrameLayout android:id="@+id/FrameLayout03" android:layout_width="fill_parent" android:layout_height="@dimen/title_bar_height" android:background="@drawable/main_title">
	
		<!--하단 공용 메뉴 바: 메뉴버튼 목록	-->
		<RelativeLayout android:id="@+id/RelativeLayout02" android:layout_alignParentBottom="true" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_gravity="center_vertical">	
				
			<LinearLayout android:id="@+id/LinearLayout02" android:layout_alignParentLeft="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_centerVertical="true" android:layout_marginLeft="5dip">
				<ImageButton android:layout_width="34dip" android:layout_height="27dip" android:id="@+id/id_btn_back" android:background="@drawable/btn_back_xml" android:layout_gravity="center_vertical"></ImageButton>
			</LinearLayout>

			<LinearLayout android:id="@+id/LinearLayout04" android:layout_centerInParent="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_centerVertical="true">
				<!--TextView android:id="@+id/id_txt_title" android:layout_height="wrap_content" android:text="@string/quick_msg_name" android:layout_gravity="center_vertical|center_horizontal" android:textSize="20dip" android:layout_width="wrap_content" android:textColor="@color/color_title"></TextView-->
			</LinearLayout>

			<LinearLayout android:id="@+id/LinearLayout03" android:layout_alignParentRight="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_centerVertical="true" android:layout_marginRight="5dip">
			</LinearLayout>
		
		</RelativeLayout>
	
	</FrameLayout>
	
	<!--작업영역			-->
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
	
		<LinearLayout android:id="@+id/LinearLayout02" android:layout_height="wrap_content" android:orientation="vertical" android:layout_width="fill_parent">

			<TextView android:id="@+id/TextView01" android:layout_width="wrap_content" android:layout_height="13dip"></TextView>
			<LinearLayout android:id="@+id/LinearLayout03" android:layout_height="wrap_content" android:layout_width="wrap_content" android:orientation="vertical" android:layout_gravity="center_horizontal">
				<ImageButton android:layout_width="275dip" android:layout_height="46dip" android:id="@+id/id_btn_delay_start" android:background="@drawable/menu_delay_xml" android:layout_gravity="center_vertical"></ImageButton>
			</LinearLayout>

			<TextView android:id="@+id/TextView01" android:layout_width="wrap_content" android:layout_height="7dip"></TextView>
			<LinearLayout android:id="@+id/LinearLayout03" android:layout_height="wrap_content" android:layout_width="wrap_content" android:orientation="vertical" android:layout_gravity="center_horizontal">
				<ImageButton android:layout_width="275dip" android:layout_height="46dip" android:id="@+id/id_btn_accident_found" android:background="@drawable/menu_accident_xml" android:layout_gravity="center_vertical"></ImageButton>
			</LinearLayout>

			<TextView android:id="@+id/TextView01" android:layout_width="wrap_content" android:layout_height="7dip"></TextView>
			<LinearLayout android:id="@+id/LinearLayout03" android:layout_height="wrap_content" android:layout_width="wrap_content" android:orientation="vertical" android:layout_gravity="center_horizontal">
				<ImageButton android:layout_width="275dip" android:layout_height="46dip" android:id="@+id/id_btn_construction_found" android:background="@drawable/menu_construction_xml" android:layout_gravity="center_vertical"></ImageButton>
			</LinearLayout>

			<TextView android:id="@+id/TextView01" android:layout_width="wrap_content" android:layout_height="7dip"></TextView>
			<LinearLayout android:id="@+id/LinearLayout03" android:layout_height="wrap_content" android:layout_width="wrap_content" android:orientation="vertical" android:layout_gravity="center_horizontal">
				<ImageButton android:layout_width="275dip" android:layout_height="46dip" android:id="@+id/id_btn_brocken_car_found" android:background="@drawable/menu_brocken_car_xml" android:layout_gravity="center_vertical"></ImageButton>
			</LinearLayout>

			<TextView android:id="@+id/TextView01" android:layout_width="wrap_content" android:layout_height="20dip"></TextView>
			<LinearLayout android:id="@+id/LinearLayout03" android:layout_height="wrap_content" android:layout_width="wrap_content" android:orientation="vertical" android:layout_gravity="center_horizontal">
				<ImageButton android:layout_width="275dip" android:layout_height="46dip" android:id="@+id/id_btn_new_msg" android:background="@drawable/menu_new_message_xml" android:layout_gravity="center_vertical"></ImageButton>
			</LinearLayout>

			<TextView android:id="@+id/TextView01" android:layout_width="wrap_content" android:layout_height="7dip"></TextView>
			<LinearLayout android:id="@+id/LinearLayout03" android:layout_height="wrap_content" android:layout_width="wrap_content" android:orientation="vertical" android:layout_gravity="center_horizontal">
				<ImageButton android:layout_width="275dip" android:layout_height="46dip" android:id="@+id/id_btn_cancel" android:background="@drawable/menu_cancel_xml" android:layout_gravity="center_vertical"></ImageButton>
			</LinearLayout>

		</LinearLayout>
		
	</LinearLayout>

</LinearLayout>

</FrameLayout>
<!--(끝)상단 영역		-->


 

<!--하단 공용 메뉴 바		-->
<LinearLayout android:id="@+id/LinearLayout01"
			android:layout_alignParentBottom="true"
			android:layout_height="wrap_content" android:layout_width="fill_parent">

	<!--하단 공용 메뉴 바: 메뉴바 배경	-->
	<FrameLayout android:id="@+id/FrameLayout01" android:layout_width="fill_parent" android:layout_height="@dimen/footer_bar_height" android:background="@drawable/footer_bkgnd">
	
		<!--하단 공용 메뉴 바: 메뉴버튼 목록	-->
		<RelativeLayout android:id="@+id/RelativeLayout02" android:layout_alignParentBottom="true" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_gravity="center_vertical">	
				
			<LinearLayout android:id="@+id/LinearLayout02" android:layout_alignParentLeft="true" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_centerVertical="true">
			</LinearLayout>
		
		</RelativeLayout>
	
	</FrameLayout>

</LinearLayout>
<!--(끝)하단 공용 메뉴 바	-->


</RelativeLayout>
	